# Copy this file to terraform.tfvars and update with your values
# cp terraform.tfvars.example terraform.tfvars

project_id            = "your-gcp-project-id"
region                = "us-central1"
service_name          = "flask-crud-app"
firestore_location    = "nam5"
environment           = "dev"
allow_unauthenticated = true

# Resource limits
min_instances = 0
max_instances = 10
cpu_limit     = "1000m"
memory_limit  = "512Mi"

# Optional: Specify pre-built image
# app_image = "us-central1-docker.pkg.dev/your-project/flask-crud-app-repo/flask-app:latest"
